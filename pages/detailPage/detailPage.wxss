/*********帖子主体********/

.main{
    border-bottom: 3rpx solid rgb(211, 205, 205);
    width:100%
}
.line{
    margin-top: 2%;
    margin-left: -10%;
    background:rgb(248, 245, 245);
    width: 110%;
    height: 0.5rpx;
}
.avatarUrl{
        width: 100rpx;
        height: 100rpx;
        float: left;
        margin-left: 5%;
        margin-top: 3%;
        border-radius: 50%;
        border: 1rpx;
        border:3rpx solid rgb(220, 220, 215);    
}
.top{
    width: auto;
    padding-top: 25rpx;
}
.nickName{
    margin-left: 3%;
    text-align: left;
    width: 53%;
    float: left;
}


.time{
    color:  rgb(182, 182, 182);
    margin-left: 3%;
    padding-top: 1%;
    text-align: left;
    width: 100%;
    font-size: 28rpx;
    margin-top: 1%;
}

.imgBlock{  
    display: flex;
    justify-content: center;
    align-items: center;
    margin-left: 5%;
    margin-right: 5%;  
}
.img{    
    border-radius: 10rpx;
    margin-left: 5%;
    margin-right: 5%;
    
}
.title{
    /*
        居中代码
    */
    /* display: flex;
