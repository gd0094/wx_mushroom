    font-size: x-large;
    text-align: left;
    margin-left: 5%;
}
.content{
    margin-top: 5%;
    text-align: left;
    margin-left: 5%;
    margin-right: 5%;
    display: flex;
}
.collect{
    width: 5%;
    margin-left: 3%;
}
.like{
    width: 5%;
    
}
.icon_text{
    padding-left: 10rpx;
    font-size:large;
    display: inline;
    width: 10%;
}
/*********评论主体********/
.comment_top{
    margin-top: 2%;
    padding-left: 5%;
    margin-bottom: 2%;
    color: rgb(175, 173, 173);
}
.commentBlock{
    padding-left: 5%;
    margin-top: 2%;
}
.comment_headImg{
    width: 80rpx;
    height: 80rpx;
    float: left;
    border-radius: 50%;
    border:2rpx solid #dcdcd7;
    margin-right: 2%;
}
.comment_nickName{
    padding-top: 1%;
}    
.comment_time{
    padding-top: 1%;
    font-size: 25rpx;
    color: #cfcfcb;
}
.comment_content{
    margin-top: 3%;
    padding-left: 13%;
}
.comment_content text{
    font-family:'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
    font-size: 35rpx;
}
.replyContainer{
    width: 79%;
    height: 70%;
    margin-left: 12%;
    margin-top: 2%;
    margin-bottom: 3%;
    padding-top:1%;
    padding-bottom:2%;
    padding-left: 2%;
    border-radius: 10rpx;
    background-color:rgb(250, 250, 250) ;
}
.reply_name{
    color: rgb(80, 165, 190);
    font-size: 29rpx;
    font-weight: 400;
    padding-right: 1%;
}
.comment_icon{
    width: 29rpx;
    height: 29rpx;
    margin-top: 3%;
    padding-bottom: -3%;
    padding-right: 1%;
}
.comment_bottom{
    padding-top: 15%;
    padding-bottom: 15%;
    color: gray;
}
.comment_bottom text{
    margin-top: 10%;
    margin-left: 20%;
}
.sendCommentPlace{
    background-color:rgb(255, 255, 255);
    display: flex;
    width: 100%;
    height: 6%;
    border: 2rpx solid gainsboro;
    bottom: 0;
    position: fixed;
    padding-left: 2%;
    
    /*background-color:rgb(152, 212, 231,0.5);*/

}
